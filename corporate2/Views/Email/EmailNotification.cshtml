
@{
    ViewData["Title"] = "EmailNotification";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap4.1.3.min.css" rel="stylesheet" />

    <script src="~/lib/jquery/dist/js/Jquery3.3.1.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link rel="icon" href="~/lib/Images/320px-Collabera_logo.png" sizes="16x16 " type="image/png" />
</head>
<body>
    <h5 style="padding-left:10px;margin-top:-35px;color:darkblue;font-family:'Times New Roman', Times, serif;font-size:35px;">Email Notification</h5><hr class="btn-primary" />

    <div class="container-fluid">
        <form>
            <div class="row">

                <div class="col-sm-10">
                    <div class="to">
                        <label style="font-size:20px; font-family:'Times New Roman', Times, serif;color:darkblue;">To...</label>
                    </div>
                    <div class="email">
                        <input type="email" id="lastname" class="form-control" placeholder="Enter Email" required />
                    </div>
                </div>
                <div class="col-sm-10">
                    <div class="cc">
                        <label style="font-size:20px; font-family:'Times New Roman', Times, serif;color:darkblue;color:darkblue;">CC...</label>
                    </div>
                    <div class="cc">
                        <input type="email" id="lastname" class="form-control" placeholder="Enter Email" required />
                    </div>
                </div>
                <div class="col-sm-10">
                    <div class="subject">
                        <label style="font-size:20px; font-family:'Times New Roman', Times, serif;color:darkblue;">Subject...</label>
                    </div>
                    <div class="cc">
                        <input type="text" id="lastname" class="form-control" placeholder="Enter Subject " required />
                    </div>
                </div>
                <div class="col-sm-10" style="width:300px;">
                    <div class="form-group" style="margin-top:10px;">
                        <textarea class="form-control" rows="5" id="comment" placeholder="Enter Meassage" style="" required></textarea>
                    </div>
                </div>
                <div class="col-sm-10">
                    <div class="form-group" style="float:right;margin-top:10px;">
                        <input type="submit" class="btn btn-primary" value="Send" style="width:200px;">
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
