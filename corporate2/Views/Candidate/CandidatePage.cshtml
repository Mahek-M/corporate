@model corporate2.Data.Models.Candidate;
@{
    ViewData["Title"] = "CandidatePage";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/js/lib/bootstrap/dist/css/bootstrap4.1.3.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/js/Jquery3.3.1.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/css/candidatepage.css" rel="stylesheet" />
    <link href="~/css/candidate.css" rel="stylesheet" />
    <link rel="icon" href="~/lib/Images/320px-Collabera_logo.png" sizes="16x16 " type="image/png" />
 
    <script src="~/JQuery/JavaScript.js"></script>
    
    <script type="text/javascript">

        function clear() {
            document.getElementById("firstname").value = " ";
            document.getElementById("midname").Value = "";
            document.getElementById("lastname").Value = "";
            document.getElementById("jobtitle").Value = "";
            document.getElementById("email").Value = "";
            document.getElementById("cell").Value = "";
            document.getElementById("home").Value = "";
            document.getElementById("fax").Value = "";
            document.getElementById("address1").Value = "";
            document.getElementById("address2").Value = "";
            document.getElementById("city").Value = "";
            document.getElementById("sel1").Value = "";
            document.getElementById("zip").Value = "";
            document.getElementById("comment").Value = "";
            document.getElementById("res").Value = "";

        }
    </script>
</head>
<body>
    <h5 class="heading">Candidate Page</h5><hr class="btn-primary" />
    <div class="container-fluid">
        <form enctype="multipart/form-data" method="post" asp-controller="Candidate">
            <div class="row">
                <div class="col-sm-6">

                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">
                                <label class="lbl">Contact</label>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <input type="text" id="firstname" asp-for="Firstname" class="form-control" placeholder="Enter firstName" required />
                                    </div>
                                    <div class="col-sm-4">
                                        <input type="text" id="midname" asp-for="Middlename" class="form-control" placeholder="Enter MiddleName" required />
                                    </div>
                                    <div class="col-sm-4">
                                        <input type="text" id="lastname" asp-for="Lastname" class="form-control" placeholder="Enter LastName" required />
                                    </div>
                                    <div class="col-sm-12">
                                        <input type="text" id="jobtitle" asp-for="Jobtitle" class="form-control" placeholder="Job Title" required />
                                    </div>
                                    <div class="col-sm-12">
                                        <input type="email" id="email" asp-for="Email" class="form-control" placeholder="Enter Email" required />
                                    </div>
                                    <div class="col-sm-4">
                                        <input type="text" id="cell" asp-for="Cell" class="form-control" placeholder="Enter cell" required />
                                    </div>
                                    <div class="col-sm-4">
                                        <input type="text" id="home" asp-for="Home" class="form-control" placeholder="Enter Home" required />
                                    </div>
                                    <div class="col-sm-4">
                                        <input type="text" id="fax" asp-for="Fax" class="form-control" placeholder="Enter fax" required />
                                    </div>
                                    <div class="col-sm-12">
                                        <input type="text" id="address1" asp-for="Address1" class="form-control" placeholder="Enter Address 1" required />
                                    </div>
                                    <div class="col-sm-12">
                                        <input type="text" id="address2" asp-for="Address2" class="form-control" placeholder="Enter Adrdress2" required />
                                    </div>
                                    <div class="col-sm-4">
                                        <input type="text" id="city" asp-for="City" class="form-control" placeholder="Enter City" required />
                                    </div>
                                    <div class="col-sm-8">

                                        <select class="form-control" id="sel1" style="width:300px;" asp-for="Some1" required>
                                            <option value="" selected disabled>Select</option>
                                            <option>IT</option>
                                            <option>NON IT</option>
                                            <option>Delivery</option>
                                            <option>Sales</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-4">
                                        <input type="text" id="zip" asp-for="Zip" class="form-control" placeholder="Enter Zip" required />
                                    </div>
                                    <div class="col-sm-8">
                                        <select class="form-control" id="sel1" style="width:300px;" asp-for="Some2" required>
                                            <option value="" selected disabled>Select</option>
                                            <option>IT</option>
                                            <option>NON IT</option>
                                            <option>Delivery</option>
                                            <option>Sales</option>
                                        </select>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <label class="lbl">Eligible for Hire</label>
                    <div class="form-check-inline">
                        Yes
                        @Html.RadioButtonFor(model => model.Hire, "Yes")
                    </div>
                    <div class="form-check-inline">
                        No
                        @Html.RadioButtonFor(model => model.Hire, "NO")
                    </div>
                    <div class="form-group">
                        <textarea class="form-control " rows="5" id="comment" asp-for="Comptetenices" placeholder="Enter Core Competencies" style="width:455px;" required></textarea>
                    </div>
                    <div class="form-group">
                        <select class="form-control containwidth" asp-for="Jobcategory" id="sel1" style="width:455px;" required>
                            <option value="" selected disabled>Select Job Category</option>
                            <option>Open</option>
                            <option>Close</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select class="form-control containwidth" asp-for="Source" id="sel1" style="width:455px;" required>
                            <option value="" selected disabled>Source</option>
                            <option>Open</option>
                            <option>Close</option>
                        </select>
                    </div>

                </div>
                <div class="col-sm-6">
                    <div>
                        <label class="lbl">Resume upload</label>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control " asp-for="Resumeupload" rows="5" id="res" placeholder="Enter Core Competencies" required></textarea>
                    </div>
                    <!--  <div class="custom-file">

                    <label class="custom-file-label" for="customFile">Choose file</label>

                    <!-- <input type="file" name="file" multiple class="custom-file-input" id="customFile" asp-for="Fileupload">
                      </div>-->
                    <input type="file" name="file" multiple class="form-control-file" id="exampleFormControlFile1">

                    <div class="form-group">
                        <input type="submit" id="submit" class="btn" onclick="clear()" value="submit" style="color:white;" />

                    </div>
                </div>
            </div>
        </form>

    </div>
