@model corporate2.Data.Models.Requirement
@{
    ViewData["Title"] = "Requirementpage";
} 
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/js/lib/bootstrap/dist/css/bootstrap4.1.3.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/js/Jquery3.3.1.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/css/datepicker.css" rel="stylesheet" />
    <link rel="icon" href="~/lib/Images/320px-Collabera_logo.png" sizes="16x16 " type="image/png" />

    <link href="~/css/requ.css" rel="stylesheet" />
    <!-- date pickup libaray-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.min.js"></script>
    <!-- Local css File-->
    <link href="~/css/req.css" rel="stylesheet" />
    @if (ViewBag.Mesage != null)
    {
        <script type="text/javascript">
            window.document.onload = function () {
                alert("@ViewBag.Mesage");
            }
        </script>
    }
</head>
<body>
    <h5 class="heading">Requirement Page</h5><hr class="btn-primary" />
    <div class="container-fluid">
        <form method="post" asp-controller="Home" asp-action="">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <select class="form-control wi" id="sel1" asp-for="Departement" required>
                            <option value="" selected disabled>Please select Departemet</option>
                            <option>IT</option>
                            <option>NON IT</option>
                            <option>Delivery</option>
                            <option>Sales</option>
                        </select>
                    </div>
                    <div class="form-label-group">
                        <input type="text" id="position" class="form-control wi" placeholder="Enter Position" asp-for="Position" required>
                        <label for="position"></label>
                    </div>
                    <div class="form-label-group formsection">
                        <input type="text" id="skill" class="form-control wi" placeholder=" No of position" asp-for="NoPosition" required>
                        <label for="skills"></label>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control wi" rows="5" id="comment" asp-for="Skills" placeholder="Enter Skills" required></textarea>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <select class="form-control wi" id="sel1" asp-for="Location" required>
                            <option value="" selected disabled>select location</option>
                            <option>surat</option>
                            <option>vadodara</option>
                            <option>Bikaner</option>
                            <option>jaipur</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select class="form-control wi" id="sel1" asp-for="Status" required>
                            <option value="" selected disabled>status</option>
                            <option>Open</option>
                            <option>Close</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control wi" rows="5" id="comment" asp-for="Comments" placeholder="Enter Comment" required></textarea>
                    </div>
                    <div class="form-group ">
                        <input class="form-control wi" data-toggle="dropdown" id="date" asp-for="Date" name="date" placeholder="MM/DD/YYY" type="text" required />
                        <!--<input class="form-control"  data-date-format="dd/mm/yyyy" id="datepicker" placeholder="Enter Skills" type="text" style="width:300px;">-->
                    </div>

                    <div class="form-group" style="float:right;margin-right:175px;">
                        <input type="submit" class="btn" value="Submit" asp-action="Req">
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script>
        $(document).ready(function () {
            var date_input = $('input[name="date"]'); //our date input has the name "date"
            var container = $('.bootstrap-iso form').length > 0 ? $('.bootstrap-iso form').parent() : "body";
            var options = {
                format: 'mm/dd/yyyy',
                container: container,
                todayHighlight: true,
                autoclose: true,
            };
            date_input.datepicker(options);
        })
    </script>
   
   
</body>
</html>
