@model Login
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap4.1.3.min.css" rel="stylesheet" />

    <script src="~/lib/jquery/dist/js/Jquery3.3.1.js"></script>
    <script src="~/js/popper.min.js"></script>
    <link href="~/js/lib/bootstrap/dist/css/bootstrap4.1.3.min.css" rel="stylesheet" />
    <link href="~/css/Login.css" rel="stylesheet" />
    <link rel="icon" href="~/lib/Images/320px-Collabera_logo.png" sizes="16x16 " type="image/png" />
    <script src="~/JQuery/JavaScript.js"></script>
    <script type="text/javascript">
    @if (!ViewData.ModelState.IsValid && ViewData.ModelState["Error"].Errors.Count > 0)
    {
        <text>
            $(document).ready(function() {
            alert('@ViewData.ModelState["Error"].Errors.First().ErrorMessage');
            });
        </text>
    }
    </script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h6 class="card-title text-center" style="color:#0173cc">Collabera</h6>
                        <form class="form-signin" method="post" asp-controller="Home">
                            <div class="form-label-group">
                                <input type="text" id="uname" asp-for="Username" class="form-control" placeholder="User Name" required autofocus>
                                <label for="inputEmail">User Name</label>
                            </div>

                            <div class="form-label-group">
                                <input type="password" id="inputPassword" asp-for="Password" class="form-control" placeholder="Password" required>

                                <label for="inputPassword">Password</label>
                            </div>

                            <div class="custom-control custom-checkbox mb-3">
                                <input type="checkbox" class="custom-control-input" id="customCheck1">
                                <label class="custom-control-label" for="customCheck1">Remember password</label>
                            </div>
                            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>


  
    </body>
</html>
